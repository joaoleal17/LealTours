<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:LealTours.ViewModels"
             x:Class="LealTours.Views.ManageBookingPage"
             x:Name="ThisPage"
             Title="GestÃ£o de Reservas">
    <ContentPage.BindingContext>
        <viewmodels:ManageBookingsViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="16" Spacing="12">
        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
        <CollectionView ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="0,6">
                        <VerticalStackLayout>
                            <Label Text="{Binding Tour.Name}" FontAttributes="Bold" />
                            <Label Text="{Binding CustomerName}" />
                            <Label Text="{Binding CustomerEmail}" />
                            <HorizontalStackLayout Spacing="16">
                                <Label Text="{Binding Date, StringFormat='Data: {0:dd/MM/yyyy}'}" />
                                <Label Text="{Binding People, StringFormat='Pessoas: {0}'}" />
                            </HorizontalStackLayout>
                            <Button Text="Cancelar" 
                      Command="{Binding BindingContext.CancelCommand, Source={x:Reference ThisPage}}" 
                      CommandParameter="{Binding .}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>