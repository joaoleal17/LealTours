<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:LealTours.ViewModels"
             x:Class="LealTours.Views.BookingPage"
             Title="{Binding Title}">
    <ContentPage.BindingContext>
        <viewmodels:BookingsViewModel />
    </ContentPage.BindingContext>

    <!-- Conteúdo da página... (ok se já tens diferente) -->
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <!-- Cabeçalho do tour -->
            <Label Text="{Binding Tour.Name}" FontAttributes="Bold" FontSize="18" />
            <Label Text="{Binding Tour.Description}" LineBreakMode="WordWrap" />
            <HorizontalStackLayout Spacing="16">
                <Label Text="{Binding Tour.Price, StringFormat='Preço: {0:C}'}" />
                <Label Text="{Binding Tour.DurationHours, StringFormat='Duração: {0}h'}" />
            </HorizontalStackLayout>

            <BoxView HeightRequest="1" Color="#444" Margin="0,10"/>

            <!-- Formulário -->
            <Entry Placeholder="Nome do cliente" Text="{Binding CustomerName}" />
            <Entry Placeholder="Email" Keyboard="Email" Text="{Binding CustomerEmail}" />
            <DatePicker Date="{Binding Date}" />
            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                <Label Text="Pessoas:" VerticalOptions="Center"/>
                <Stepper Minimum="1" Maximum="100" Increment="1" Value="{Binding People}" />
                <Label Text="{Binding People}" VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
            <Button Text="Confirmar Reserva"
                    Command="{Binding SubmitCommand}"
                    IsEnabled="{Binding IsNotBusy}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>