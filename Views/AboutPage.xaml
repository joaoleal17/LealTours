<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:LealTours.ViewModels"
             x:Class="LealTours.Views.AboutPage"
             Title="Sobre">
    <ContentPage.BindingContext>
        <viewmodels:AboutViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="16" Spacing="8">
        <Label Text="{Binding AppName}" FontAttributes="Bold" FontSize="20"/>
        <Label Text="{Binding Version}" />
        <Label Text="{Binding Author}" />
        <Label Text="Aplicação para gestão de tours e reservas." />
    </VerticalStackLayout>
</ContentPage>